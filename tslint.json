// https://github.com/palantir/tslint/blob/master/src/configs/recommended.ts
{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "max-line-length": [
            true,
            200
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "no-console": [
            true,
            "debug",
            "log",
            "time",
            "timeEnd",
            "trace"
        ],
        "member-ordering": [
            true,
            "static-before-instance",
            "variables-before-functions"
        ],
        "object-literal-sort-keys": false,
        "no-string-literal": false,
        "no-empty": false,
        "member-access": true,
        "no-trailing-whitespace": false,
        "no-var-requires": false,
        "variable-name": [
            true,
            "allow-leading-underscore"
        ],
        "pipe-naming": [
            true,
            "camelCase"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ]
    }
}